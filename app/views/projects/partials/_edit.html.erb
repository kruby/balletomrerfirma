<% form_for(@project) do |f| %>
<%= f.error_messages %>

<h1>
Rediger projekt

<%= link_to '[Vis]', @project %>
<%= link_to '[Tilbage]', projects_path %>
<%= f.submit '[Opdater]', :class => 'button' %>
</h1>

<div id="start_stop_dato">
	<p class='projekt_felt'>
    <%= f.label :Projekt %><br />
    <%= f.text_field :title %>
  </p>

  <p class='dato_felt'>
    <%= f.label :Start_dato %><br />
    <%= f.text_field :start_date %>
  </p>

  <p class='dato_felt'>
    <%= f.label :Slut_dato %><br />
    <%= f.text_field :end_date %>
  </p>

</div><br>
	
  <p>
    <%= f.label :Beskrivelse %><br />
    <%= f.text_area :description %>
  </p>

<% end %>


<% content_for :javascript do %>

  <% javascript_tag do %>

		$('#project_start_date,#project_end_date').datepicker({
			showOtherMonths: true,
			selectOtherMonths: true,
			showWeek: true,
			firstDay: 1					
		});

		$('#project_start_date,#project_end_date').datepicker($.datepicker.regional['da']);

  <% end %>

<% end %>