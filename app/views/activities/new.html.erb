<%= render :partial => "layouts/menu" %>
<div id="admin_formular">

<% form_for(@activity) do |f| %>
  <%= f.error_messages %>

<h1>
Ny aktivitet
<%= link_to '[Tilbage]', activities_path %>
<%= f.submit '[Opret]', :class => 'button' %>
</h1>

  <p>
    <%= f.label :Aktiv %><br />
    <%= f.check_box :active %>
  </p>
  <p>
    <%= f.label :Titel %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :Beskrivelse %><br />
    <%= f.text_area :description %>
  </p>

<div id="start_stop_dato">

  <p class='dato_felt'>
    <%= f.label :Start_dato %><br />
    <%= f.text_field :start_date, :value => nice_date_form(@activity.start_date) %>
  </p>

  <p class='dato_felt'>
    <%= f.label :Slut_dato %><br />
    <%= f.text_field :end_date, :value => nice_date_form(@activity.end_date) %>
  </p>

</div>



<% end %>


</div>

<% content_for :javascript do %>

  <% javascript_tag do %>

		$('#activity_start_date,#activity_end_date').datepicker({
			showOtherMonths: true,
			selectOtherMonths: true,
			showWeek: true,
			firstDay: 1					
		});

		$('#activity_start_date,#activity_end_date').datepicker($.datepicker.regional['da']);

  <% end %>

<% end %>